{% extends 'base.html.twig' %}

{% block title %}New Publication{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Create New Publication</h1>
        <a href="{{ path('app_publication_index') }}" class="btn btn-outline-secondary">Back to List</a>
    </div>

    {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}
    
    <div class="mb-3">
        {{ form_label(form.titre, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.titre) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.contenu, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.contenu, {'attr': {'class': 'form-control', 'rows': 4}}) }}
        {{ form_errors(form.contenu) }}
    </div>
    
    <div class="d-flex justify-content-end">
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
