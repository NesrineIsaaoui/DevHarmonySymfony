{% extends 'base.html.twig' %}

{% block title %}Publication{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="display-4 mb-4">Publication Details</h1>

    <a href="{{ path('app_publication_index') }}" class="btn btn-sm btn-secondary">Back to List</a>

    <div class="card shadow mb-4">
        <div class="card-body">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th style="width: 150px;">Id</th>
                        <td>{{ publication.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ publication.titre }}</td>
                    </tr>
                    <tr>
                        <th>Content</th>
                        <td>{{ publication.contenu }}</td>
                    </tr>
                    <tr>
                        <th>Publication Date</th>
                        <td>{{ publication.datePublication ? publication.datePublication|date('Y-m-d H:i:s') : 'N/A' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer d-flex justify-content-between">
                    {% set session_user_id = app.session.get('user_id') %}
                    {% set publication_user_id = publication.utilisateur.id %}
                    {% if session_user_id is defined and session_user_id is not null and session_user_id|number_format(0,0) == publication_user_id %}
                        <a href="{{ path('app_publication_edit', {'id': publication.id}) }}" class="btn btn-sm btn-secondary">Edit</a>
                    {% endif %}
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h3 class="card-title">Comments</h3>
            {{ include('commentaire/_form.html.twig', {'form': commentForm}) }}
            {% if comments is not empty %}
                <div class="list-group">
                    {% for comment in comments %}
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <p>{{ comment.contenu }}</p>
                            <div class="btn-group">
                                {% set comment_user_id = comment.utilisateur is defined and comment.utilisateur is not null ? comment.utilisateur.id : null %}
                                {% if session_user_id is not null and comment_user_id is not null and session_user_id == comment_user_id %}
                                    <a href="{{ path('app_commentaire_edit', {'id': comment.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                                    <form method="post" action="{{ path('app_commentaire_delete', {'id': comment.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-muted">No comments yet.</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
