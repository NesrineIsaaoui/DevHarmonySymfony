{% extends 'base.html.twig' %}

{% block body %}
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    
    <div class="content-page">
        <div class="content">
            <div class="container-fluid">
                <!-- Contenu du formulaire -->
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Ajouter votre réservation</h5>
                                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                                    <!-- Contenu de votre formulaire ici -->
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label sr-only">Catégorie Code Promo</label>
                                        <div class="col-sm-9">
                                            {{ form_row(form.categoriecodepromos, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label sr-only">Cours</label>
                                        <div class="col-sm-9">
                                            {{ form_row(form.courss, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                        </div>
                                    </div>
                                    <div style="display: none;">
                                        {{ form_row(form.idUser) }}
                                    
                                        {{ form_row(form.resStatus) }}
                                        {{ form_row(form.paidStatus) }}
                                    </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Fin contenu du formulaire -->
                
            </div>
        </div>
    </div>
{% endblock %}
