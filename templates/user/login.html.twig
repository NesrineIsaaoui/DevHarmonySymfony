{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

<script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="mb-4">Login Etudiant</h1>
                <form method="post">
                    <div class="form-group">
                        <label for="inputEmail">Email</label>
                        <input type="email" id="inputEmail" class="form-control" name="email" placeholder="Email" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword">Password</label>
                        <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>
                    </div>
                                    <div class="form-group">
                    <div class="g-recaptcha" data-sitekey="6LcKdYgpAAAAANS5VVXqzqynFSJS-LTYMsExTs0V"></div>
                </div>
                    <button class="btn btn-primary" type="submit">Sign in</button>
                </form>
                <div class="mt-3">
                    <a href="{{ path('verification_forget') }}" class="btn btn-link">Forgot Password?</a>
                </div>
                <div class="mt-3">
                    <a href="{{ path('app_login_prof') }}" class="btn btn-link">Enseignent Login</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
