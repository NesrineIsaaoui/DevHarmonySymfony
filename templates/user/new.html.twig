{% extends 'base.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="mb-4">Create New User</h1>
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                <div class="form-group">
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                    {{ form_errors(form.nom) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
                    {{ form_errors(form.prenom) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.age, {'attr': {'class': 'form-control', 'placeholder': 'Age'}}) }}
                    {{ form_errors(form.age) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.image, {'attr': {'class': 'form-control', 'placeholder': 'Image'}}) }}
                    {{ form_errors(form.image) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.numTel, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}
                    {{ form_errors(form.numTel) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                    {{ form_errors(form.email) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.mdp, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                    {{ form_errors(form.mdp) }}
                </div>
                
                <div class="form-group">
                    {{ form_widget(form.role, {'attr': {'class': 'form-control', 'placeholder': 'role'}}) }}
                    {{ form_errors(form.role) }}
                </div>
                <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
                {{ form_end(form) }}
                <a href="{{ path('app_user_index') }}" class="btn btn-secondary mt-3">Back to List</a>
            </div>
        </div>
    </div>
{% endblock %}
