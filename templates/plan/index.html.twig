{% extends 'base.html.twig' %}

{% block title %}Hello PlanController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <table class="table table-striped">
                    <thead>
                    <tr>     <th>Nom</th>
                        <th>Modification</th>
                        <th>Suppression</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for plan in p %}
                        <tr>
                            <td>{{ plan.nom }}</td>
                            <td>
                                <a class="btn btn-success" href="{{ path('modifPlan',{'id':plan.id}) }}">Modifier</a>
                            </td>
                            <td>
                                <a class="btn btn-danger" href="{{ path('supp_plan',{'id':plan.id}) }}">Supprimer</a>
                            </td>
                        </tr>

                    {% endfor %}

                    </tbody>
                </table>
</div>
{% endblock %}
