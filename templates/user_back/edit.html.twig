{% extends 'baseBack.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <h1>Edit User</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

<div class="form-group">
    <div class="col-sm-12">
        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
        {{ form_errors(form.nom) }}
    </div>
</div>

<div class="form-group">
    <div class="col-sm-12">
        {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
        {{ form_errors(form.prenom) }}
    </div>
</div>

<div class="form-group">
    <div class="col-sm-12">
        {{ form_widget(form.age, {'attr': {'class': 'form-control', 'placeholder': 'Age'}}) }}
        {{ form_errors(form.age) }}
    </div>
</div>

<div class="form-group">
    <div class="col-sm-12">
        {{ form_widget(form.image, {'attr': {'class': 'form-control-file', 'placeholder': 'Image'}}) }}
        {{ form_errors(form.image) }}
    </div>
</div>

<div class="form-group">
    <div class="col-sm-12">
        {{ form_widget(form.numTel, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}
        {{ form_errors(form.numTel) }}
    </div>
</div>

<div class="form-group">
    <div class="col-sm-12">
        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
        {{ form_errors(form.email) }}
    </div>
</div>



<div class="form-group">
    <div class="form-group">
        {{ form_widget(form.role, {'attr': {'class': 'form-control', 'placeholder': 'role'}}) }}
        {{ form_errors(form.role) }}
    </div>
</div>

<button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>

{{ form_end(form) }}


