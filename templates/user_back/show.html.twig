{% extends 'baseBack.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ user.age }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if user.image %}
                        <img src="{{ asset('uploads/' ~ user.image) }}" alt="{{ user.nom }}'s image">
                    {% else %}
                        No image available
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>NumTel</th>
                <td>{{ user.numTel }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Mdp</th>
                <td>{{ user.mdp }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ user.status }}</td>
            </tr>
            <tr>
                <th>Resetcode</th>
                <td>{{ user.resetcode }}</td>
            </tr>
            <tr>
                <th>Confirmcode</th>
                <td>{{ user.confirmcode }}</td>
            </tr>
            <tr>
                <th>Statuscode</th>
                <td>{{ user.statuscode }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_back_index') }}">Back to list</a>

    <a href="{{ path('app_user_back_edit', {'id': user.id}) }}">Edit</a>

    {{ include('user_back/_delete_form.html.twig') }}
{% endblock %}
