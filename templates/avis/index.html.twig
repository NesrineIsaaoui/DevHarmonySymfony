{% extends 'baseBack.html.twig' %}

{% block body %}
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>Les Avis</h1>
            <nav>
            </nav>
        </div><!-- End Page Title -->
        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            {% for message in app.flashes('notice') %}
                                <div class="alert alert-success bg-success text-light border-0 alert-dismissible fade show" role="alert">
                                    {{ message }}
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('noticedelete') %}
                                <div class="alert alert-danger bg-danger text-light border-0 alert-dismissible fade show" role="alert">
                                    {{ message }}
                                </div>
                            {% endfor %}
                            <h5 class="card-title"></h5>

                            <!-- Default Table -->
                            <table class="table">
                                <thead>
                                <tr>
                                    <th scope="col">etoiles</th>
                                    <th scope="col">coursname</th>
                                    <th scope="col">Supprimer</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>
                                        {% if avis | length == 0 %}
                                            <p style="text-align: center">avis vides</p>
                                        {% endif %}
                                    </td>
                                </tr>

                                {% for p in avis  %}
                                    <tr>
                                        <td>{{ p.etoiles }}</td>
                                        <td>{{ p.cours.coursname }}</td>

                                        <td>
                                            <a href="javascript:void(0)" onclick="if(confirm('Voulez vraiement supprimer ?')){window.location='{{ path('supprimerAvis', {'id': p.id }) }}';}">
                                                <button type="button" class="btn btn-outline-danger">
                                                    <i class="fas fa-trash-alt"></i> Supprimer
                                                </button>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <!-- End Default Table Example -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
