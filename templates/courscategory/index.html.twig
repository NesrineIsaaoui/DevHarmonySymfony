{% extends 'baseBack.html.twig' %}

{% block body %}
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>Les Categories</h1>
            <nav>
            </nav>
        </div><!-- End Page Title -->
        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            {% for message in app.flashes('notice') %}
                                <div class="alert alert-success bg-success text-light border-0 alert-dismissible fade show" role="alert">
                                    {{ message }}
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('noticedelete') %}
                                <div class="alert alert-danger bg-danger text-light border-0 alert-dismissible fade show" role="alert">
                                    {{ message }}
                                </div>
                            {% endfor %}
                            <h5 class="card-title"></h5>
                            <a href="{{ path('ajout_category') }}">
                                <button type="button" style="display: none;"></button> <!-- Bouton cachÃ© -->
                                <i class="fas fa-plus-circle" style="float: right; font-size: 24px; color: #007bff; cursor: pointer;" onclick="window.location='{{ path('ajout_category') }}';"></i>
                            </a>
                            <!-- Default Table -->
                            <table class="table">
                                <thead>
                                <tr>
                                    <th scope="col">categoryname</th>
                                    <th scope="col">Modifier</th>
                                    <th scope="col">Supprimer</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>
                                        {% if cat | length == 0 %}
                                            <p style="text-align: center">Categories vides</p>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% for p in cat  %}
                                    <tr>
                                        <td>{{ p.categoryname }}</td>
                                        <td>
                                            <a href="{{ path('modifier_category',{id:p.id}) }}">
                                                <i class="fas fa-pencil-alt" style="font-size: 18px; color: #17a2b8; cursor: pointer;"></i> <!-- Icone Modifier -->
                                            </a>
                                        </td>
                                        <td>
                                            <a href="javascript:void(0)" onclick="if(confirm('Voulez vraiment supprimer ?')){window.location='{{ path('supprimerCategory', {'id': p.id }) }}';}">
                                                <i class="fas fa-trash-alt" style="font-size: 18px; color: #dc3545; cursor: pointer;"></i> <!-- Icone Supprimer -->
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <!-- End Default Table Example -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
