{% extends 'baseBack.html.twig' %}

{% block title %}Publication Details{% endblock %}

{% block body %}
    <div class="container">
        <h1>Publication Details</h1>

        <a href="{{ path('app_publication_back_index') }}" class="btn btn-secondary">Back to List</a>
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>{{ publication.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Title</th>
                    <td>{{ publication.titre }}</td>
                </tr>
                <tr>
                    <th scope="row">Content</th>
                    <td>{{ publication.contenu }}</td>
                </tr>
                <tr>
                    <th scope="row">Publication Date</th>
                    <td>{{ publication.datePublication ? publication.datePublication|date('Y-m-d H:i:s') : 'N/A' }}</td>
                </tr>
            </tbody>
        </table>
        <a href="{{ path('app_publication_back_edit', {'id': publication.id}) }}" class="btn btn-primary">Edit</a>
        {{ include('publication_back/_delete_form.html.twig', {'class': 'd-inline'}) }}

    </div>
{% endblock %}
