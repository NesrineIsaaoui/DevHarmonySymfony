{% extends 'base.html.twig' %}

{% block title %}Edit Commentaire{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="display-4 mb-4">Edit Commentaire</h1>
    <div class="mb-3">
        <a href="{{ path('app_publication_index') }}" class="btn btn-secondary">Back to List</a>
    </div>

    {{ form_start(form, {'attr': {'class': 'form', 'novalidate': 'novalidate'}}) }}

    <div class="form-group mb-3">
        {{ form_label(form.contenu, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.contenu, {'attr': {'class': 'form-control', 'rows': 4}}) }}
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
    </div>

    {{ form_end(form) }}
</div>

{% endblock %}
